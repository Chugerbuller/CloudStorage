<Window
    x:Class="CloudStore.UI.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:CloudStore.UI.ViewModels"
    Title="CloudStore.UI"
    MinWidth="800"
    MinHeight="1050"
    x:DataType="vm:MainWindowViewModel"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <Grid
        Margin="10"
        ColumnDefinitions="8*,2*"
        RowDefinitions="0.5*,7*">
        <Border
            Margin="10"
            Padding="5,0,5,0"
            BorderBrush="rgba(100,0,200,50)"
            BorderThickness="1"
            CornerRadius="3">
            <Grid ColumnDefinitions="*,30*">
                <Button
                    Grid.Column="0"
                    Padding="0"
                    Command="{Binding ToPrevDirectoryCommand}"
                    Content="..." />
                <TextBlock
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding UserPath, Mode=OneWay}" />
            </Grid>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            BorderBrush="rgba(100,0,200,50)"
            BorderThickness="1"
            Classes="Card"
            CornerRadius="3">
            <ListBox
                x:Name="items"
                ItemsSource="{Binding FilesAndDirectorys}"
                SelectedItem="{Binding SelectedFileOrDirectory}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Padding="10,5,10,5"
                            BorderBrush="rgba(100,0,200,50)"
                            BorderThickness="1"
                            Classes="Card">
                            <Grid ColumnDefinitions="3*,*">
                                <StackPanel
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Image
                                        Width="30"
                                        Height="30"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Source="{Binding ImageSource}" />
                                    <TextBlock
                                        Margin="10,5,5,5"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontFamily="Bold"
                                        FontSize="15"
                                        Text="{Binding Name}" />

                                </StackPanel>
                                <StackPanel
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                                    <Button
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Command="{ReflectionBinding #items.DataContext.GoToDirectoryCommand}"
                                        CornerRadius="10"
                                        IsVisible="{Binding ButtonGoToIsVisible}">
                                        <Button.Content>

                                            <Image
                                                Width="20"
                                                Height="20"
                                                Source="avares://CloudStore.UI/Assets/Folder2Open.ico" />
                                        </Button.Content>
                                    </Button>
                                    <Button
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        BorderThickness="1"
                                        Command="{ReflectionBinding #items.DataContext.DownloadFileCommand}"
                                        CornerRadius="10"
                                        IsVisible="{Binding ButtonDowloadIsVisible}">
                                        <Button.Content>
                                            <Image
                                                Width="20"
                                                Height="20"
                                                Source="avares://CloudStore.UI/Assets/Download2.ico" />
                                        </Button.Content>
                                    </Button>
                                    <Button
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        BorderThickness="1.5"
                                        Command="{ReflectionBinding #items.DataContext.AvailableEditFileCommand}"
                                        CornerRadius="10"
                                        IsVisible="{Binding ButtonEditIsVisible}">
                                        <Button.Content>
                                            <Image
                                                Width="20"
                                                Height="20"
                                                Source="avares://CloudStore.UI/Assets/Edit.ico" />
                                        </Button.Content>
                                    </Button>
                                    <Button
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Command="{ReflectionBinding #items.DataContext.DeleteFileCommand}"
                                        CornerRadius="10"
                                        IsVisible="{Binding ButtonDeleteIsVisible}">
                                        <Button.Content>

                                            <Image
                                                Width="20"
                                                Height="20"
                                                Source="avares://CloudStore.UI/Assets/TrashCan.ico" />
                                        </Button.Content>
                                    </Button>

                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            Orientation="Vertical">
            <Button Padding="10" Command="{Binding SendFileCommand}">
                <Button.Content>
                    <StackPanel
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="20"
                            Height="20"
                            Source="avares://CloudStore.UI/Assets/Upload.ico" />
                        <Label Margin="5,0,0,0" Content="Добавить файл" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Command="{Binding MakeDirectoryShowCommand}">
                <Button.Content>
                    <StackPanel
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="20"
                            Height="20"
                            Source="avares://CloudStore.UI/Assets/FolderPlus.ico" />
                        <Label Margin="5,0,0,0" Content="Создать папку" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <StackPanel
                HorizontalAlignment="Center"
                IsVisible="{Binding MakeDirectoryVisibility}"
                Orientation="Vertical">
                <TextBox Margin="5" Text="{Binding NewDirectory}" />
                <Button
                    Margin="5"
                    Command="{Binding MakeDirectoryCommand}"
                    Content="Ок" />


            </StackPanel>
            <StackPanel IsVisible="{Binding EnableEditFile}" Orientation="Vertical">
                <TextBox
                    Margin="5"
                    IsVisible="{Binding EnableEditFile}"
                    Text="{Binding newFileName}" />
                <Button
                    Margin="5"
                    Command="{Binding EditFileCommand}"
                    Content="Ок"
                    IsVisible="{Binding EnableEditFile}" />
            </StackPanel>
        </StackPanel>
        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            Orientation="Horizontal">
            <TextBox
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Bold"
                Text="{Binding User.Login}" />
            <Button
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding LogOutCommand}">
                <Button.Content>
                    <Image
                        Width="20"
                        Height="20"
                        Source="avares://CloudStore.UI/Assets/logoutI.ico" />
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Window>